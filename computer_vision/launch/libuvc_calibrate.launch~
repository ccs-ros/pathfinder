<launch>
  <!-- Set this to your camera's name -->
  <arg name="cam_name" value="logitech_c920" />

  <!-- Start the GSCAM node -->
  <env name="GSCAM_CONFIG" value="v4l2src device=/dev/video1 ! video/x-raw-rgb,framerate=15/1,width=640,height=480 ! ffmpegcolorspace " />
  <node pkg="gscam" type="gscam" name="$(arg cam_name)">
    <param name="camera_name" value="$(arg cam_name)" />
    <param name="camera_info_url" type="string" value="package://computer_vision/c920_intrinsic.yml" />
    <remap from="camera/image_raw" to="$(arg cam_name)/image_raw" />
  </node>

